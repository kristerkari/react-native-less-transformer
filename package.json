{
  "name": "react-native-less-transformer",
  "version": "1.4.0",
  "description": "Less transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/kristerkari/react-native-less-transformer",
  "scripts": {
    "release": "npmpub",
    "precommit": "lint-staged",
    "test": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "index.js",
    "CHANGELOG.md",
    "README.md"
  ],
  "dependencies": {
    "app-root-path": "^3.1.0",
    "css-to-react-native-transform": "^2.0.0",
    "semver": "^7.3.8"
  },
  "peerDependencies": {
    "less": ">=2.0.0",
    "react-native": ">=0.45.0"
  },
  "devDependencies": {
    "eslint": "^8.33.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^13.1.1",
    "npmpub": "^5.1.1",
    "prettier": "^2.8.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": [
        2,
        "never"
      ],
      "semi": [
        2,
        "always"
      ],
      "quotes": [
        2,
        "double"
      ],
      "no-else-return": 2
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  }
}
